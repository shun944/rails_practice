<%= provide(:title, "Schedule") %>

<div class="box_for_schedule">
    <div class="title"><%= @schedule.title %></div>
    <div class="place_title">Place</div>
    <div class="place"><%= @schedule.place %></div>
    <div class="date_title">Date</div>
    <div class="date"><%= @schedule.date %></div>
    <div class="deadline_title">Deadline</div>
    <div class="deadline"><%= @schedule.deadline %></div>
    <div class="content"><%= @schedule.content %></div>
    <div class = "good_title">Target value</div>
    <div class = "good"><%= @schedule.target_value %></div>
    <% if current_user.id == @schedule.user_id %>
      
    <% else %>
      <div class = "good_button"><%= render "goods/good", schedule: @schedule %></div>
    <% end %>
    
</div>


<div class="col-md-6 col-md-offset-3">
  <% if current_user.id == @schedule.user_id %>
    <div class="col-md-6 col-md-offset-3">
        <%= button_to "edit", edit_schedule_path, method: :get, class: "btn btn-primary", size:10 %>
    </div>
  <% else %>
    
  <% end %>
  
  <div class="col-md-12 col-md-offset-0">
    <div class = "back">
      <div class = "back_button"><%= button_to "back", for_study_path, 
                  method: :get, class: "btn btn-primary "%>
      </div>
    </div>
  </div>
</div>
