<% if !current_user?(schedule.user_id) %>
  <span class="good">
    <% if schedule.iine?(current_user) %>
      <%= form_for(schedule.goods.find_by(user_id: current_user.id), method: :delete, remote: true) do |f| %>
        <%= button_tag(class: "btn btn-default btn-xs") do %>
          <%= content_tag :span, "#{schedule.goods_count}", class: "glyphicon glyphicon-heart" %>
        <% end %>
      <% end %>
    <% else %>
      <%= form_for(schedule.goods.build, remote: true) do |f| %>
        <div><%= hidden_field_tag :schedule_id, schedule.id %></div>
        <%= button_tag(class: "btn btn-default btn-xs") do %>
          <%= content_tag :span, "#{schedule.goods_count}", class: "glyphicon glyphicon-heart-empty" %>
        <% end %>
      <% end %>
    <% end %>
  </span>
<% end %>